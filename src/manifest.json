{
    "manifest_version": 3,
    "name": "ConRad",
    "version": "1.0",
    "description": "Scans images and videos for context and displays consequences.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "16": "src/icons/icon16.png",
        "48": "src/icons/icon48.png",
        "128": "src/icons/icon128.png"
      }
    }
  }
  